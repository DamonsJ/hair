#version 400 core

layout(triangles, equal_spacing, ccw) in;

in vec3 position_tc[];

uniform mat4 model;
uniform mat4 view;
uniform mat4 projection;

void main()
{
    vec3 p0 = gl_TessCoord.x * position_tc[0];
    vec3 p1 = gl_TessCoord.y * position_tc[1];
    vec3 p2 = gl_TessCoord.z * position_tc[2];

    gl_Position = projection * view * model * vec4(p0 + p1 + p2, 1);
}
